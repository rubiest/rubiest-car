<%= form_with(model: company_profile, url: company_profiles_path, local: true) do |form| %>
  <% if company_profile.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong><%= pluralize(company_profile.errors.count, "error") %> prohibited this company_profile from being saved:</strong>

      <ul>
      <% company_profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-bordered table-hover">
    <thead class="thead-inverse">
      <tr>
        <th colspan="2" class="text-center">
          EDIT COMPANY DETAILS
        </th>
      </tr>
    </thead>
    <tbody>
      <tr class="thead-inverse">
        <th scope="row" colspan="2">Person in Charge</th>
      </tr>
      <tr>
        <th scope="row">Name</th>
        <td><%= form.text_field :pic_fullname, id: :company_profile_pic_fullname, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">Phone Number</th>
        <td><%= form.text_field :pic_phone_number, id: :company_profile_pic_phone_number, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">Position</th>
        <td><%= form.text_field :pic_position, id: :company_profile_pic_position, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">E-Mail</th>
        <td><%= form.text_field :pic_email, id: :company_profile_pic_email, class: "form-control" %></td>
      </tr>
      <tr class="thead-inverse">
        <th scope="row" colspan="2">Company Details</th>
      </tr>
      <tr>
        <th scope="row">Name</th>
        <td><%= form.text_field :c_name, id: :company_profile_c_name, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">Registration Number</th>
        <td><%= form.text_field :c_reg_number, id: :company_profile_c_reg_number, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">Address</th>
        <td><%= form.text_area :c_address, id: :company_profile_c_address, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">City</th>
        <td><%= form.text_field :c_city, id: :company_profile_c_city, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">Postcode</th>
        <td><%= form.text_field :c_postcode, id: :company_profile_c_postcode, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">State</th>
        <td><%= form.text_field :c_state, id: :company_profile_c_state, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">Country</th>
        <td><%= form.text_field :c_country, id: :company_profile_c_country, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">Phone Number</th>
        <td><%= form.text_field :c_phone_number, id: :company_profile_c_phone_number, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">Website</th>
        <td><%= form.text_field :c_website, id: :company_profile_c_website, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">E-Mail</th>
        <td><%= form.text_field :c_email, id: :company_profile_c_email, class: "form-control" %></td>
      </tr>
    </tbody>

  </table>

  <div class="actions">
    <%= form.submit "Update Company Profile", class: "btn btn-primary" %>
    <%= link_to 'Back', company_profiles_path, class: "btn btn-default" %>
  </div>
<% end %>
